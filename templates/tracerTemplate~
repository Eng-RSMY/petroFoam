FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T0;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    walls
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    inlet
    {
        type            uniformFixedValue;
	uniformValue    table 
			( 
			    (0      0.0) 
			    (9.9   0.0)
			    (10     1.0)
			    (1000   1.0)  
			); 
    }
    frontAndBack
    {
        type            empty;
    }
}


